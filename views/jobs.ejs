<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Jobs</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Ubuntu', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f0f4f8;
      color: #333;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
    }

    h1 {
      margin-top: 20px;
      font-size: 2.5rem;
      color: #007bff;
    }

    .job-count {
      text-align: center;
      font-size: 1.2rem;
      margin: 20px 0;
      color: #333;
    }

    .back-btn {
      color: #007bff;
      font-size: 32px;
      text-decoration: none;
      padding: 4px;
      border: 1px solid #007bff;
      border-radius: 8px;
      margin-top: 20px;
    }

    table {
      border-collapse: collapse;
      width: 90%;
      margin: 20px auto;
      background: #fff;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      overflow: hidden;
    }

    th, td {
      padding: 15px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #007bff;
      color: #fff;
    }

    tr:hover {
      background-color: #f1f1f1;
    }

    tr:last-child td {
      border-bottom: none;
    }

    .actions button {
      padding: 5px 10px;
      font-size: 0.9rem;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin-right: 5px;
    }

    .btn-view {
      background-color: #007bff;
      color: white;
    }

    .btn-view:hover {
      background-color: #0056b3;
    }

    .job-card {
      width: 90%;
      margin: 20px auto;
      background: #fff;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      padding: 15px;
      text-align: left;
    }

    .job-card h3 {
      margin: 10px 0;
      color: #007bff;
    }

    .job-card p {
      margin: 5px 0;
    }

    /* Media Queries for Responsive Design */
    @media (max-width: 768px) {
      table {
        display: none;
      }

      .job-card {
        display: block;
      }
    }

    @media (min-width: 769px) {
      .job-card {
        display: none;
      }
    }
  </style>
</head>

<body>

  <a href="/teacher/dashboard" class="back-btn">Back</a>
  <h1>Available Jobs</h1>

  <div class="job-count">Total Jobs: <strong><%= jobs.length %></strong></div>

  <!-- Table for Desktop -->
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Salary</th>
        <th>Company</th>
        <th>Applicants</th>
        <th>Shortlisted</th>
        <th>Interviewed</th>
        <th>Placed</th>
      </tr>
    </thead>
    <tbody>
      <% jobs.forEach(job => { %>
        <tr>
          <td><%= job.title %></td>
          <td><%= job.description %></td>
          <td><%= job.salary || "N/A" %></td>
          <td><%= job.company %></td>
          <td><%= job.applicants.length %></td>
          <td><%= job.shortlisted.length %></td>
          <td><%= job.interviewed.length %></td>
          <td><%= job.placed.length %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <!-- Card Layout for Mobile -->
  <% jobs.forEach(job => { %>
    <div class="job-card">
      <h3><%= job.title %></h3>
      <p><strong>Description:</strong> <%= job.description %></p>
      <p><strong>Salary:</strong> <%= job.salary || "N/A" %></p>
      <p><strong>Company:</strong> <%= job.company %></p>
      <p><strong>Applicants:</strong> <%= job.applicants.length %></p>
      <p><strong>Shortlisted:</strong> <%= job.shortlisted.length %></p>
      <p><strong>Interviewed:</strong> <%= job.interviewed.length %></p>
      <p><strong>Placed:</strong> <%= job.placed.length %></p>
    </div>
  <% }); %>

</body>

</html>
