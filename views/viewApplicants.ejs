<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Applicants for Job</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        /* General Styles */
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #f0f4f8, #ffffff);
            color: #333;
        }

        .container {
            max-width: 100%;
            margin: 0 auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .header h1 {
            font-size: 2.5rem;
            color: #007bff;
            margin-bottom: 10px;
        }

        .header h2 {
            font-size: 1.5rem;
            color: #6c757d;
        }

        .divider {
            height: 2px;
            background: linear-gradient(to right, #007bff, #0056b3);
            margin: 30px 0;
        }

        .card {
            margin-bottom: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease-in-out;
        }

        .card:hover {
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }

        .card h3 {
            font-size: 1.5rem;
            color: #343a40;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

        .table th {
            background: #007bff;
            color: #fff;
            text-align: left;
            padding: 10px;
        }

        .table td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        .table tr:hover {
            background-color: #f8f9fa;
        }

        /* Button Styling */
        .btn {
            padding: 8px 12px;
            border-radius: 5px;
            font-size: 14px;
            color: #fff;
            text-align: center;
            cursor: pointer;
            margin: 5px;
            text-decoration: none;
            border: none;
            transition: transform 0.2s ease, background 0.3s ease;
        }

        .btn-primary {
            background: #007bff;
        }

        .btn-primary:hover {
            background: #0056b3;
        }

        .btn-success {
            background: #28a745;
        }

        .btn-success:hover {
            background: #19692c;
        }

        .btn-warning {
            background: #d2bc7b;
            color: black;
        }

        .btn-warning:hover {
            background: #d39e00;
        }

        .btn-secondary {
            background: #6c757d;
        }

        .btn-secondary:hover {
            background: #5a6268;
        }

        /* Back to Dashboard Link */
        .back-to-dashboard {
            display: inline-flex;
            align-items: center;
            background-color: #007bff; 
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            transition: background-color 0.3s ease, transform 0.3s ease;
            margin-bottom: 20px;
        }

        .back-to-dashboard:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        .back-to-dashboard i {
            margin-right: 8px;
        }

        /* Media Queries for Responsiveness */
        @media (max-width: 1024px) {
            .header h1 {
                font-size: 2rem;
            }

            .header h2 {
                font-size: 1.3rem;
            }

            .table th, .table td {
                font-size: 14px;
                padding: 8px;
            }

            .btn {
                font-size: 12px;
                padding: 6px 10px;
            }
        }

        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }

            .header h1 {
                font-size: 1.8rem;
            }

            .header h2 {
                font-size: 1.1rem;
            }

            .table th, .table td {
                font-size: 13px;
                padding: 6px;
            }

            .btn {
                font-size: 12px;
                padding: 5px 8px;
            }

            .card {
                padding: 15px;
            }

            .back-to-dashboard {
                font-size: 14px;
                padding: 8px 12px;
            }
        }

        @media (max-width: 480px) {
            .back-to-dashboard {
                font-size: 12px;
                padding: 6px 10px;
            }

            .header h1 {
                font-size: 1.5rem;
            }

            .header h2 {
                font-size: 1rem;
            }

            .table th, .table td {
                font-size: 12px;
                padding: 5px;
            }

            .card {
                padding: 12px;
            }
        }

    </style>
</head>        
<body>
    <div class="container">
        <a href="/crc/dashboard" class="back-to-dashboard">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
        
        <!-- Header Section -->
        <div class="header">
            <h1>Job Applicants</h1>
            <h2>For the position of <%= job.title %> at <%= job.company %></h2>
        </div>

        <!-- Applicants Section -->
        <div class="divider"></div>
        <div class="card">
            <h3>Applicants</h3>
            <% if (job.applicants && job.applicants.length > 0) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Roll Number</th>
                            <th>Email</th>
                            <th>Contact</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% job.applicants.forEach(applicant => { %>
                            <tr>
                                <td><%= applicant.username %></td>
                                <td><%= applicant.rollNumber || 'N/A' %></td>
                                <td><%= applicant.email %></td>
                                <td><%= applicant.contact || 'N/A' %></td>
                                <td>
                                    <a href="<%= applicant.resume %>" target="_blank" class="btn btn-secondary">View Resume</a>
                                    <a href="mailto:<%= applicant.email %>" class="btn btn-primary">Contact</a>
                                    <form action="/crc/shortlist/<%= job._id %>/<%= applicant._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-success">Shortlist</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No applicants yet.</p>
            <% } %>
        </div>

        <!-- Shortlisted Section -->
        <div class="divider"></div>
        <div class="card">
            <h3>Shortlisted Candidates</h3>
            <% if (job.shortlisted && job.shortlisted.length > 0) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Roll Number</th>
                            <th>Email</th>
                            <th>Contact</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% job.shortlisted.forEach(candidate => { %>
                            <tr>
                                <td><%= candidate.username %></td>
                                <td><%= candidate.rollNumber || 'N/A' %></td>
                                <td><%= candidate.email %></td>
                                <td><%= candidate.contact || 'N/A' %></td>
                                <td>
                                    <a href="<%= candidate.resume %>" target="_blank" class="btn btn-secondary">View Resume</a>
                                    <a href="mailto:<%= candidate.email %>" class="btn btn-primary">Contact</a>
                                    <form action="/crc/interview/<%= job._id %>/<%= candidate._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-warning">Invite for Interview</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No shortlisted candidates yet.</p>
            <% } %>
        </div>

        <!-- Interviewed Section -->
        <div class="divider"></div>
        <div class="card">
            <h3>Interviewed Candidates</h3>
            <% if (job.interviewed && job.interviewed.length > 0) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Roll Number</th>
                            <th>Email</th>
                            <th>Contact</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% job.interviewed.forEach(candidate => { %>
                            <tr>
                                <td><%= candidate.username %></td>
                                <td><%= candidate.rollNumber || 'N/A' %></td>
                                <td><%= candidate.email %></td>
                                <td><%= candidate.contact || 'N/A' %></td>
                                <td>
                                    <a href="<%= candidate.resume %>" target="_blank" class="btn btn-secondary">View Resume</a>
                                    <a href="mailto:<%= candidate.email %>" class="btn btn-primary">Contact</a>
                                    <form action="/crc/place/<%= job._id %>/<%= candidate._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-success">Mark as Placed</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No interviewed candidates yet.</p>
            <% } %>
        </div>

        <!-- Placed Section -->
        <div class="divider"></div>
        <div class="card">
            <h3>Placed Candidates</h3>
            <% if (job.placed && job.placed.length > 0) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Roll Number</th>
                            <th>Email</th>
                            <th>Contact</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% job.placed.forEach(candidate => { %>
                            <tr>
                                <td><%= candidate.username %></td>
                                <td><%= candidate.rollNumber || 'N/A' %></td>
                                <td><%= candidate.email %></td>
                                <td><%= candidate.contact || 'N/A' %></td>
                                <td>
                                    <a href="<%= candidate.resume %>" target="_blank" class="btn btn-secondary">View Resume</a>
                                    <a href="mailto:<%= candidate.email %>" class="btn btn-primary">Contact</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No placed candidates yet.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
