<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Jobs</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap" rel="stylesheet">
  <style>
    /* General Body Style */
    body {
      font-family: 'Ubuntu', sans-serif;
      margin: 0;
      padding: 0;
      background: linear-gradient(to bottom right, #2C3E50, #1A252F);
      color: #fff;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
    }

    /* Header and Page Title Styling */
    h1 {
      margin-top: 20px;
      font-size: 2.5rem;
      color: #FF7F00; /* Orange color */
    }

    .job-count {
      text-align: center;
      font-size: 1.2rem;
      margin: 20px 0;
      color: #fff;
    }

    /* Back Button */
    .back-btn {
      color: #FF7F00;
      font-size: 1.2rem;
      text-decoration: none;
      padding: 10px 20px;
      border: 1px solid #FF7F00;
      border-radius: 5px;
      margin-top: 20px;
      transition: background-color 0.3s;
    }

    .back-btn:hover {
      background-color: #FF7F00;
      color: #1A252F;
    }

    /* Table Styling */
    table {
      width: 90%;
      margin-top: 40px;
      border-collapse: collapse;
      background-color: #fff;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      overflow: hidden;
    }

    th, td {
      padding: 14px;
      text-align: left;
      border-bottom: 1px solid #ddd;
      font-size: 1rem;
    }

    th {
      background-color: #FF7F00; /* Orange header */
      color: #fff;
    }

    td {
      background-color: #f4f4f4;
      color: #333;
    }

    tr:hover {
      background-color: rgba(255, 87, 34, 0.1);
    }

    tr:last-child td {
      border-bottom: none;
    }

    /* Action Button Styling */
    .actions button {
      padding: 8px 15px;
      font-size: 1rem;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin-right: 10px;
      background-color: #FF7F00; /* Orange button */
      color: #fff;
      transition: background-color 0.3s;
    }

    .actions button:hover {
      background-color: #FF5722;
    }

    /* Responsive Design for Smaller Screens */
    @media (max-width: 768px) {
      table {
        width: 100%;
      }
    }
  </style>
</head>

<body>

  <!-- Back Button -->
  <a href="/teacher/dashboard" class="back-btn">Back</a>
  
  <h1>Available Jobs</h1>

  <div class="job-count">Total Jobs: <strong><%= jobs.length %></strong></div>

  <!-- Table for Jobs -->
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Salary</th>
        <th>Company</th>
        <th>Applicants</th>
        <th>Shortlisted</th>
        <th>Interviewed</th>
        <th>Placed</th>
        <!-- <th>Actions</th> -->
      </tr>
    </thead>
    <tbody>
      <% jobs.forEach(job => { %>
        <tr>
          <td><%= job.title %></td>
          <td><%= job.description %></td>
          <td><%= job.salary || "N/A" %></td>
          <td><%= job.company %></td>
          <td><%= job.applicants.length %></td>
          <td><%= job.shortlisted.length %></td>
          <td><%= job.interviewed.length %></td>
          <td><%= job.placed.length %></td>
          <!-- <td class="actions">
            <button>View</button>
            <button>Apply</button>
          </td> -->
        </tr>
      <% }); %>
    </tbody>
  </table>

</body>

</html>
