<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard</title>
</head>
<body>
    <h1>Welcome, Teacher!</h1>

    <!-- Dropdown to filter by branch -->
    <form method="GET" action="/teacher/dashboard">
        <label for="branch">Filter by Branch:</label>
        <select name="branch" id="branch">
            <% branches.forEach(branch => { %>
                <option value="<%= branch %>" <%= branch === req.query.branch ? 'selected' : '' %>><%= branch %></option>
            <% }); %>
        </select>
        <button type="submit">Filter</button>
    </form>

    <h2>Students List</h2>
    <% if (students.length > 0) { %>
        <ul>
            <% students.forEach(student => { %>
                <li><%= student.username %> - <%= student.branch %></li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No students found.</p>
    <% } %>
</body>
</html>
